<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dialog.GohLoginDialog">

    <EditText
        android:id="@+id/et_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/goh_shape_radius_16_stroke_1"
        android:hint="账号"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/goh_color_acacac"
        tools:text="asdfa" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@drawable/goh_shape_radius_16_stroke_1"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/goh_color_acacac"
        tools:text="asdfa" />

    <Button
        android:id="@+id/btn_account_login"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/goh_shape_radius_16"
        android:text="@string/goh_login"
        android:textColor="@color/gohWhite"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_account_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/goh_account_register"
        android:textColor="@color/goh_color_acacac"
        android:textSize="14dp" />
</LinearLayout>